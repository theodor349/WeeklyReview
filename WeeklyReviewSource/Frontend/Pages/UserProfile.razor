@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Graph
@inject Microsoft.Graph.GraphServiceClient GraphServiceClient
@attribute [Authorize]

<PageTitle>Profile</PageTitle>

<RadzenText TextStyle="TextStyle.DisplayH5">User Profile</RadzenText>
@if (user == null)
{
    <RadzenText>Loading...</RadzenText>
}
else
{

    <RadzenRow>
        <RadzenColumn>
            <RadzenText TextStyle="TextStyle.Overline">
                Property
            </RadzenText>
        </RadzenColumn>
        <RadzenColumn>
            <RadzenText TextStyle="TextStyle.Overline">
                Value
            </RadzenText>
        </RadzenColumn>
    </RadzenRow>
    <Radzen.Blazor.Rendering.Line></Radzen.Blazor.Rendering.Line>
    <RadzenRow>
        <RadzenColumn>DisplayName</RadzenColumn>
        <RadzenColumn>@user.DisplayName</RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>UserPrincipalName</RadzenColumn>
        <RadzenColumn>@user.UserPrincipalName</RadzenColumn>
    </RadzenRow>
}

@code {
    [CascadingParameter]
    public MainLayout Layout { get; set; }

    private User? user;

    protected override void OnInitialized()
    {
        Layout.Title = "Counter";
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            user = await GraphServiceClient.Me.Request().GetAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
