@page "/counter"

<PageTitle>Counter</PageTitle>
<RadzenText TextStyle="TextStyle.DisplayH5">Counter</RadzenText>

<RadzenText>Current count: @currentCount</RadzenText>

<RadzenButton Click=@(() => IncrementCount()) Text="Click me" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
